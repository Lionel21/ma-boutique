{% extends 'base.html.twig' %}

{% block title %}Nos produits - Ma Boutique{% endblock %}

{% block content %}

    <h1>Nos produits</h1>

    <div class="row product-container">

        {% for product in products %}
            <div class="col-md-4">
                <div class="product-item">
                    <a href="{{ path('product', {'slug' : product.slug}) }}"><img src="{{ asset('uploads/images/products/index.jpg') }}" alt="{{ product.name }}"></a>
                    <h5 class="product-name">{{ product.name }}</h5>
                    <span class="product-subtitle">{{ product.subtitle }}</span>
                    <span class="product-price">{{ (product.price / 100)|number_format(2, ',', '.') }} â‚¬</span>
                </div>
            </div>
        {% endfor %}

    </div>


{% endblock %}
